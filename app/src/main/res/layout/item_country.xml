<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="country"
            type="com.fatihb.countries.model.Country" />
        <variable
            name="listener"
            type="com.fatihb.countries.adapter.CountryClick" />
    </data>

<LinearLayout
     android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="horizontal"
    android:onClick="@{listener::onCountryClick}">
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="3dp"
        android:downloadUrl="@{country.countryUrl}"
        >
    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="center">
        
        <TextView
            android:id="@+id/uuid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:text="@{String.valueOf(country.uuid)}"></TextView>

        <TextView
            android:id="@+id/nameOfCoun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@{country.countryName}"
            android:padding="5dp">

        </TextView>

        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@{country.countryRegion}"
            android:padding="5dp">

        </TextView>

    </LinearLayout>
    </LinearLayout>

</layout>